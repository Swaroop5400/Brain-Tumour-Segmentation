import scipy.stats as st
def paired_ttest_pvalue(y_true, y_baseline):
    """
    y_true, y_baseline: 1D arrays of per-case scores (paired)
    returns: t-statistic, two-sided p-value
    """
    tstat, pval = st.ttest_rel(y_true, y_baseline, nan_policy='omit')
    return tstat, pval


